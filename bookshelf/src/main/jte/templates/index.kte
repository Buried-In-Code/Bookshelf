<!DOCTYPE html>
<html lang="en-GB">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <title>Bookshelf</title>
    <link href="https://use.fontawesome.com/releases/v6.3.0/css/all.css" rel="stylesheet">
    <link href="/static/css/bulma-custom.css" rel="stylesheet">
    <link href="/static/css/styles.css" rel="stylesheet">
</head>
<body>
    <main class="section">
        <header class="block has-text-centered">
            <figure class="image is-128x128 is-inline-block">
                <img class="profile" loading="lazy" src="/static/img/logo.png" alt="Bookshelf Logo"/>
            </figure>
            <h1 class="title is-1">Bookshelf</h1>
        </header>
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-half">
                    <div class="box has-background-text-soft is-shadowless">
                        <form id="account-form" onsubmit="return false;">
                            @template.components.form.input(label="Username", id="username")
                            @template.components.form.input(label="Password", id="password", type="password", disabled=true)
                            <div class="buttons is-centered">
                                <button class="button is-info" id="sign-in-button" onclick="signIn()">Sign In</button>
                                <button class="button is-success" id="sign-up-button" onclick="signUp()">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    @template.components.footer()
    <script src="/static/js/scripts.js" type="text/javascript"></script>
    <script src="/static/js/bulma-theme.js" type="text/javascript"></script>
    <script type="text/javascript">
        async function signIn() {
            const caller = "sign-in-button";
            addLoading(caller);
            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;

            const headers = HEADERS;
            headers["Authorization"] = "Basic " + btoa(username + ":" + password);
            const response = await submitRequest("/sign-in", "POST", {}, headers);
            if (response !== null)
                window.location.reload();
            removeLoading(caller);
        }
        async function signUp() {
            const caller = "sign-up-button";
            addLoading(caller);
            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;

            const headers = HEADERS;
            headers["Authorization"] = "Basic " + btoa(username + ":" + password);
            const response = await submitRequest("/sign-up", "POST", {}, headers);
            if (response !== null)
                window.location.reload();;
            removeLoading(caller);
        }
    </script>
</body>
</html>