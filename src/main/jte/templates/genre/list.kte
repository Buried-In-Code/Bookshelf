@import java.util.List
@import github.buriedincode.bookshelf.models.Genre
@param genres: List<Genre>

<!DOCTYPE html>
<html lang="en-GB">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <title>Bookshelf</title>
    <link href="https://use.fontawesome.com/releases/v6.3.0/css/all.css" rel="stylesheet">
    <link id="dark-theme" href="/static/css/custom-bulma-dark.css" rel="stylesheet">
    <link id="light-theme" disabled href="/static/css/custom-bulma-light.css" rel="stylesheet">
    <link href="/static/css/styles.css" rel="stylesheet">
    <link href="/static/img/favicon.ico" id="favicon" rel="icon" type="image/x-icon">
</head>
<body class="has-navbar-fixed-top">
    @template.components.navbar()
    <main class="section">
        <div class="container">
            <header class="block has-text-centered">
                <h1 class="title is-1">Genres</h1>
            </header>
            <div class="columns">
                <div class="column is-one-quarter-tablet is-one-fifth-fullhd">
                    @template.components.settings_box()
                    <div class="box">
                        <h1 class="title is-5 has-text-info-light">Filter Genres</h1>
                        <form accept-charset="UTF-8" action="/genres" method="GET">
                            @template.components.forms.input(label="Title", name="title")
                            <div class="buttons is-centered">
                                <button class="button is-info">
                                    <span class="icon">
                                        <i class="fa-solid fa-filter"></i>
                                    </span>
                                    <span>Filter</span>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="box">
                        <h5 class="title is-5 has-text-info-light">Create Genre</h5>
                        <form id="create-genre-form" onsubmit="return false;">
                            @template.components.forms.input(label="Title", name="title")
                            <div class="buttons is-centered">
                                <button class="button is-success" id="create-genre-button" onclick="createGenre()" type="button">
                                    <span class="icon">
                                        <i class="fa-solid fa-add"></i>
                                    </span>
                                    <span>Create</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="column">
                    <div class="columns is-multiline is-centered">
                        @if(genres.isEmpty())
                            <div class="column has-text-centered">
                                <div class="box">
                                    <h5 class="title is-5 has-text-danger-light">No Genres found.</h5>
                                </div>
                            </div>
                        @else
                            @for(entry in genres)
                                <div class="adjustable-column column has-text-centered">
                                    @template.components.view_box.genre(entry=entry)
                                </div>
                            @endfor
                        @endif
                    </div>
                </div>
            </div>
        </div>
    </main>
    @template.components.footer()
    <script src="/static/js/bulma-navbar.js" type="text/javascript"></script>
    <script src="/static/js/scripts.js" type="text/javascript"></script>
    <script src="/static/js/settings-box.js" type="text/javascript"></script>
    <script type="text/javascript">
        function createGenre() {
            const caller = "create-genre-button";
            let form = document.getElementById("create-genre-form");
            let formData = Object.fromEntries(new FormData(form));
            console.log(formData);

            addLoading(caller);
            fetch("/api/v0/genres", {
                method: "POST",
                headers: headers,
                body: JSON.stringify({
                    "title": formData["title"],
                    "bookIds": [],
                }),
            }).then((response) => {
                if (!response.ok){
                    return Promise.reject(response);
                }
                window.location.reload();
            }).catch((response) => response.json().then((msg) => {
                @raw
                    alert(`${response.status} ${response.statusText}: ${msg.details}`);
                @endraw
            })).finally(() => removeLoading(caller));
        }
    </script>
</body>
</html>
