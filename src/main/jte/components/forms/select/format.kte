@import github.buriedincode.bookshelf.models.Format
@import github.buriedincode.bookshelf.Utils.titleCase
@param label: String = "Select Format"
@param name: String = "format"
@param selected: Format? = null

<div class="field">
    <label class="label has-text-info">${label}</label>
    <div class="control is-expanded">
        <div class="select is-fullwidth">
            <select name="${name}">
                @if(selected == null)
                    <option disabled selected value="">Select Format</option>
                @else
                    <option selected value="${selected.name}">${selected.titleCase()}</option>
                @endif
                @for(entry in Format.values())
                    @if(entry == selected)
                        !{continue}
                    @endif
                    <option value="${entry.name}">${entry.titleCase()}</option>
                @endfor
            </select>
        </div>
    </div>
</div>
