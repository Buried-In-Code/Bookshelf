{% extends "base.jinja" %}
{% from "components/columns/book.jinja" import book_column %}
{% block content %}
<section class="section">
  {% block details %}{% endblock %}
  <div class="buttons is-centered">
    {% block link_buttons %}{% endblock %}
  </div>
  <div class="buttons is-centered">
    {% block action_buttons required %}{% endblock %}
  </div>
  {% block sub_content %}
    <div class="columns">
      <div class="column is-one-quarter-tablet is-one-fifth-fullhd">
        {% include "components/settings_box.jinja" %}
      </div>
      <div class="column">
        <h3 class="subtitle is-3 has-text-primary-light">Books</h3>
        <div class="columns is-multiline">
          {% for _book in book_list %}
            {{ book_column(_book) }}
          {% endfor %}
        </div>
      </div>
    </div>
  {% endblock %}
</section>
{% endblock %}
{% block js %}
  <script src="/static/js/settings-box.js" type="text/javascript"></script>
{% endblock %}
