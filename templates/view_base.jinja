{% extends "base.jinja" %}
{% from "components/columns/book.jinja" import book_column %}
{% block css %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma-slider@2.0.5/dist/css/bulma-slider.min.css">
{% endblock %}
{% block content %}
<section class="section">
  {% block details %}{% endblock %}
  <div class="buttons is-centered">
    {% block link_buttons %}{% endblock %}
  </div>
  <div class="buttons is-centered">
    {% block action_buttons required %}{% endblock %}
  </div>
  {% block sub_content %}
    <div class="divider subtitle is-capitalized is-size-3 is-primary has-text-primary-light">Books</div>
    <div class="columns">
      <div class="column is-one-quarter-tablet is-one-fifth-fullhd">
        {% include "components/columns_slider.jinja" %}
      </div>
      <div class="column">
        <div class="columns is-multiline">
          {% for _book in book_list %}
            {{ book_column(_book) }}
          {% endfor %}
        </div>
      </div>
    </div>
  {% endblock %}
</section>
{% endblock %}
{% block js %}
<script src="https://cdn.jsdelivr.net/npm/bulma-slider@2.0.5/dist/js/bulma-slider.min.js"></script>
<script src="/static/js/bulma-slider.js" type="text/javascript"></script>
{% endblock %}
