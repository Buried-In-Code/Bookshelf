{% macro user_column(obj) %}
<div class="column is-full-mobile is-half-tablet is-two-fifths-desktop is-one-third-widescreen is-one-quarter-fullhd has-text-centered">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-64x64 is-rounded">
            <img alt="{{ obj.username }}' profile image" loading="lazy" onerror="this.src='https://via.placeholder.com/128x128'" src="/static/img/logo.png"/>
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-5 has-text-info">{{ obj.username }}</p>
        </div>
      </div>
    </div>
    <footer class="card-footer">
      <a class="card-footer-item has-text-link" href="/users/{{ obj.user_id }}">
        <span class="icon is-medium">
          <i class="fa-solid fa-lg fa-eye"></i>
        </span>
        <span>View</span>
      </a>
      <a class="card-footer-item has-text-link" href="/users/{{ obj.user_id }}/wishlist">
        <span class="icon is-medium">
          <i class="fa-solid fa-lg fa-star"></i>
        </span>
        <span>Wishlist</span>
      </a>
    </footer>
  </div>
</div>
{% endmacro %}
