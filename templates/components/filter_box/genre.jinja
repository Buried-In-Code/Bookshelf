{% from "components/forms.jinja" import input %}
{% macro genre_filter(action) %}
<div class="box">
  <h1 class="title is-5 has-text-link">Filter Genres</h1>
  <form accept-charset="UTF-8" action="{{ action }}" method="GET">
    {{ input("Name", "name", value=filters['name'] or '') }}
    <div class="buttons is-centered">
      <button class="button is-link is-rounded">
        <span class="icon is-medium">
          <i class="fa-solid fa-lg fa-filter"></i>
        </span>
        <span>Filter</span>
      </button>
    </div>
  </form>
</div>
{% endmacro %}
