{% from "components/forms.jinja" import input %}
{% macro series_filter(action) %}
<div class="box">
  <h1 class="title is-5">Filter Series</h1>
  <form accept-charset="UTF-8" action="{{ action }}" method="GET">
    {{ input("Title", "title", value=filters['title'] or '') }}
    <div class="buttons is-centered">
      <button class="button is-primary is-rounded">
        <span class="icon is-medium">
          <i class="fas fa-lg fa-filter"></i>
        </span>
        <span>Filter</span>
      </button>
    </div>
  </form>
</div>
{% endmacro %}
