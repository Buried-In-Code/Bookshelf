@param label: String
@param name: String
@param value: String? = null
@param disabled: Boolean = false

<div class="field">
<%--    <label class="label has-text-info-bold" for="${name}">${label}</label>--%>
    <div class="control is-expanded">
        <textarea class="textarea has-fixed-size" disabled="${disabled}" id="${name}" name="${name}" placeholder="${label}">${value}</textarea>
    </div>
    <p class="help is-danger" id="${name}-error"></p>
</div>
