@import github.buriedincode.bookshelf.models.User
@import kotlin.collections.List
@import kotlin.collections.Map
@param resources: List<User>
@param filters: Map<String, Any?>
@param session: User?

<!DOCTYPE html>
<html lang="en-GB" data-theme="villain">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <title>Bookshelf</title>
    <link href="https://use.fontawesome.com/releases/v6.3.0/css/all.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bulma@1.0.1/css/bulma.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/gh/Buried-In-Code/Vegeta@0.2.0/css/vegeta.min.css" rel="stylesheet">
    <link href="/static/css/styles.css" rel="stylesheet">
    <link href="/static/img/favicon.ico" id="favicon" rel="icon" type="image/x-icon">
</head>
<body class="has-navbar-fixed-top">
@template.components.navbar(session = session)
<main class="section">
    <div class="container">
        <header class="block has-text-centered">
            <h1 class="title is-1">Users</h1>
        </header>
        <div class="columns">
            <div class="column is-one-third-tablet is-one-quarter-desktop is-one-fifth-fullhd">
                @template.components.filters.user(
                    username = filters["username"] as String?,
                    resetUrl = "/users"
                )
            </div>
            <div class="column">
                <nav class="level is-mobile">
                    <div class="level-left">
                        <p class="level-item has-text-centered">
                            @if(resources.size == 1)
                                <span>1 User</span>
                            @else
                                <span>${resources.size} Users</span>
                            @endif
                        </p>
                    </div>
                    <div class="level-right">
                        <p class="level-item">
                            <a class="button is-success" href="/users/create">
                                <span class="icon">
                                    <i class="fa-solid fa-add"></i>
                                </span>
                                <span>Create</span>
                            </a>
                        </p>
                    </div>
                </nav>
                <div class="columns is-multiline is-centered">
                    @for(entry in resources.sorted())
                        <div class="column is-half-tablet is-one-third-widescreen is-one-quarter-fullhd">
                            @template.components.views.user(entry = entry)
                        </div>
                    @else
                        <div class="column">
                            <div class="box has-text-centered has-background-text-soft is-shadowless">
                                <h5 class="title is-5 has-text-danger">No Users found.</h5>
                            </div>
                        </div>
                    @endfor
                </div>
            </div>
        </div>
    </div>
</main>
@template.components.footer()
<script src="/static/js/scripts.js" type="text/javascript"></script>
<script src="/static/js/bulma-navbar.js" type="text/javascript"></script>
</body>
</html>
